<%= form_for post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <br>
  <!-- <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %> -->
  <%= f.label :tag_ids, "Select Tag(s)" %><br>
  <%= f.collection_select(:tag_ids, 
                          Tag.all, 
                          :id, 
                          :name, {include_blank: "Remove Tags"},
                          { multiple: true, size: 5 },
                           ) %>

  <br>
  <!-- <%= f.collection_radio_buttons(:category_id, Category.all, :id, :name) %> -->

 <!--  <%= f.collection_select(:category_id, Category.all, :id, :name, {include_blank: "no category"}) %> -->
 
 <%= f.label :category_id, "Select a Category"  %><br> 
 <%= select_tag("post[category_id]", 
     options_from_collection_for_select( Category.all, 
                                         "id", 
                                         "name",
                                         post.category_id ), 
                                         include_blank: "No Category") %>
  <br>
  <%= f.submit %>
<% end %>